<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/angular_1_router.js"></script>
    <base href="/"/>
</head>
<body ng-app="app" ng-cloak>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        <app></app>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/AngularApp/app.js"></script>
    <script src="~/AngularApp/addressDirective.js"></script>
    <script src="~/AngularApp/app.component.js"></script>
    <script src="~/AngularApp/directive.js"></script>
    <script src="~/AngularApp/removeFriend.js"></script>
    <script src="~/AngularApp/stateDisplay.js"></script>
    <script src="~/AngularApp/videoComponent.js"></script>
    <script src="~/AngularApp/common/common.service.js"></script>
    <script src="~/AngularApp/common/productResource.js"></script>
    <script src="~/AngularApp/productsComponent.js"></script>
    <script src="~/AngularApp/heroes.js"></script>
    <script src="~/AngularApp/crisis.js"></script>
    <script src="~/AngularApp/dialog.js"></script>
    @*<script src="~/Scripts/App/app.js"></script>
    <script src="~/Scripts/App/app.component.js"></script>
    <script src="~/Scripts/App/directive.js"></script>
    <script src="~/Scripts/App/addressDirective.js"></script>
    <script src="~/Scripts/App/removeFriend.js"></script>
    <script src="~/Scripts/App/stateDisplay.js"></script>
    <script src="~/Scripts/App/videoComponent.js"></script>*@
</body>
</html>
